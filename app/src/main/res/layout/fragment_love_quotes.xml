<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loveqbg"
    tools:context=".fragments.LoveQuotesFragment">

    <ImageButton
        android:id="@+id/btnOpenDrawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/baseline_menu_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_love_quote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:padding="20dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:text="Love quote goes here"
        android:fontFamily="@font/wacko_demo_guide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_love_quote">

        <Button
            android:id="@+id/btn_randomize_love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Randomize Quote"
            android:textColor="@color/light_purple"
            android:backgroundTint="@color/dark_purple"/>

        <Button
            android:id="@+id/btnSaveLove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Save Quote"
            android:textColor="@color/light_purple"
            android:backgroundTint="@color/dark_purple"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>